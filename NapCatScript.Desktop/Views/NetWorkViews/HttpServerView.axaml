<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="NapCatScript.Desktop.Views.NetWorkViews.HttpServerView">
    <StackPanel>
        <Label Content="HTTP服务器" HorizontalAlignment="Center"></Label>
        <Grid ColumnDefinitions="5*, 5*" RowDefinitions="4*, 2*, 2*, 2*">
            <!--主机 && 端口-->
            <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" ColumnDefinitions="2.5*, 2.5*, 2.5*, 2.5*">
                <Label Grid.Column="0" Content="HttpTest" />
                <Button Content="启用" Grid.Column="3"/>
            </Grid>
            
            
            <!--主机 && 端口-->
            <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" ColumnDefinitions="2.5*, 2.5*, 2.5*, 2.5*">
                <Label Grid.Column="0" Content="主机" />
                <TextBlock Grid.Column="1" Text="127.0.0.1" />
                <Label Grid.Column="2" Content="端口" />
                <TextBlock Grid.Column="3" Text="127.0.0.1"/>
            </Grid>
            
            <!--消息格式 && CORS-->
            <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" ColumnDefinitions="2.5*, 2.5*, 2.5*, 2.5*">
                <Label Grid.Column="0" Content="消息格式" />
                <TextBlock Text="string" Grid.Column="1"/>
                <Label Grid.Column="2" Content="CORS" />
                <TextBlock Text="未启用" Grid.Column="3"/>
            </Grid>
            
            <!--消息格式 && CORS-->
            <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" ColumnDefinitions="2.5*, 2.5*, 2.5*, 2.5*">
                <Label Grid.Column="0" Content="WS" />
                <TextBlock Text="已启用" Grid.Column="1"/>
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>
