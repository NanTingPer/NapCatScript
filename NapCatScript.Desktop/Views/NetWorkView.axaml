<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:vm="clr-namespace:NapCatScript.Desktop.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:NetWorkViewModel"
             x:Class="NapCatScript.Desktop.Views.NetWorkView">
    <ScrollViewer>
        <WrapPanel>
            <ItemsControl ItemsSource="{Binding HttpServers}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="5"></WrapPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerTheme>
                    <!--ContentPresenter 单个控件项-->
                    <ControlTheme TargetType="ContentPresenter">
                        <Setter Property="Margin" Value="8"></Setter>
                    </ControlTheme>
                </ItemsControl.ItemContainerTheme>
            </ItemsControl>
        </WrapPanel>
    </ScrollViewer>
</UserControl>
