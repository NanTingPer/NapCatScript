<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:NapCatScript.Desktop.ViewModels.ChatViewModels"
             x:DataType="vm:ChatSelectedMiniViewModel"
             x:Class="NapCatScript.Desktop.ChatViews.ChatSelectedMiniView">
    <Grid ColumnDefinitions="2*, 6*, 2*" RowDefinitions="5*, 5*">
        <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"/>
        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding GroupRemark}"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding NewMsg}"/>
        <TextBlock Grid.Column="2" Grid.Row="0" Text="时间"/>
    </Grid>
</UserControl>
