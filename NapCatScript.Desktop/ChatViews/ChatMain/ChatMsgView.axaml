<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:chatViews="clr-namespace:NapCatScript.Desktop.ChatViews"
             xmlns:chatMain="clr-namespace:NapCatScript.Desktop.ChatViews.ChatMain"
             x:DataType="chatMain:ChatMsgViewModel"
             x:Class="NapCatScript.Desktop.ChatViews.ChatMsgView">
    <Grid>
        <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="Auto, Auto">
            <Image Grid.Row="0" Grid.Column="0"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding NikeName}" FontSize="12" />
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding MsgContent}" />
        </Grid>
    </Grid>
</UserControl>
